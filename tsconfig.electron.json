{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "outDir": "dist-electron",
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}

